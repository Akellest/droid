<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="24dp">

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Информация"
        android:maxLines="10"
        android:lines="10"
        android:textSize="16sp"
        android:paddingTop="16dp"/>
    <!-- runOnUiThread() выполняет задачу сразу в главном потоке. post() ставит задачу в очередь на выполнение, но с меньшим приоритетом, а postDelayed() делает это с задержкой. В этом примере сначала выполнится runn1, потом runn2, и через 2 секунды — runn3. -->

</LinearLayout>
